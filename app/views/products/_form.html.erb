
<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <div class="notification is-danger">
            <button class="delete"></button>
            <li><%= message %></li>
          </div>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="box">
      <div class="field">
        <label class="label">Nome</label>
        <div class="control">
            <%= form.text_field :name ,class: 'input'%>
        </div>
      </div>

      <div class="field">
        <label class="label">Descrição</label>
        <div class="control">
          <%= form.text_area :description , class: 'input'%>
        </div>
      </div>

      <div class="field">
        <label class="label">Quantidade</label>
        <div class="control">
          <%= form.number_field :quantity , class: 'input'%>
        </div>
      </div>

      <div class="field">
        <label class="label">Bar a que pertece</label>
        <div class="control">
          <%= form.collection_select :company_id, Company.all, :id, :name, {}, {class: "input"}%>
        </div>
      </div>
      
      <div class= "control">
        <%= form.submit 'Enviar', class: 'button is-primary'%>
      </div>

  </div>
<% end %>