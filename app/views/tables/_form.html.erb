      <ul>
        <% table.errors.full_messages.each do |message| %>
          <div class="notification is-danger">
            <button class="delete"></button>
            <li><%= message %></li>
          </div>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="box">
      <div class="field">
        <label class="label">NÃºmero da Mesa</label>
        <div class="control">
            <%= form.number_field :table_number ,class: 'input'%>
        </div>
      </div>

      <div class="field">
        <label class="label">Bar a que pertece</label>
